{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2022",
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "src",
    "types": ["reflect-metadata"],
    "moduleResolution": "node",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "test", "dist", "**/*spec.ts", "scripts", "babel.config.js", "coverage"]
}
